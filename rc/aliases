# Directory operations
alias ..='cd ..'
alias ...='cd ../..'
alias -- -='cd -'
alias l='ls -amPF'
alias ll='ls -al -GF'
treeDir() {
    tree -Clhcr --dirsfirst $@ | less
}
alias lll=treeDir

# Super user
alias _='sudo'
alias pls='sudo'
alias please='sudo'

# Host files
alias ho='$EDITOR /etc/hosts'

# Rake noglob for ZSH
alias rake='noglob rake'

# Restart VirtualBox
alias vbfix='pls /Library/StartupItems/VirtualBox/VirtualBox restart'

# Clocker Function
clockerGet() {
    clocker list -v --gt=`date -v-8d "+%Y-%m-%d"` --lt=`date "+%Y-%m-%d"` -t $1 --title "$1" | less
}

alias tick=clockerGet

# Remove Cisco Connect VPN profiles
alias delete_cisco_connect_profiles='pls rm -rvf /opt/cisco/anyconnect/profile/gsa_cp-gfe.xml'
source /usr/local/opt/autoenv/activate.sh
