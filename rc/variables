# Text Editor
#
export EDITOR="vim"

# Homebrew
#
export PATH=/usr/local/opt/python/libexec/bin:/usr/local/bin:/usr/local/sbin:$PATH

# Composer
#
export PATH=$HOME/.composer/vendor/bin:$PATH

# Path for RVM
#
export PATH=$HOME/.rvm/bin:$PATH

# Path for `go get`
#
export GOPATH=$HOME/Developer/golang:$HOME/Developer
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin

# Path for `cargo install`
#
export PATH=$PATH:~/.cargo/bin

# Terminal
#
export TERM="xterm-256color"

# Disable Tmux auto-titling of windows
#
export DISABLE_AUTO_TITLE=true

# CloudGov Helpers
#
export CG_PIPELINE="$HOME/Developer/cloud.gov/cg-pipeline-tasks"
export CG_SCRIPT="$HOME/Developer/cloud.gov/cg-scripts"
export ci_env=''

# Gulp autocompletion
#
eval "$(gulp --completion=zsh)"

# Bat Theme
#export BAT_THEME="TwoDark" # Dracula
export BAT_THEME="Monokai Extended Light" # PaperColor
