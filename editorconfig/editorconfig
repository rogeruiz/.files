# EditorConfig is awesome: http://EditorConfig.org

root = false

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

[*.ledger]
indent_style = space
indent_size = 4

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# 4 space indentation
[*.rs]
indent_style = space
indent_size = 4

# 8 space indentation
[*.go]
indent_style = tab
indent_size = 8

# 4 space indentation
[Makefile]
indent_style = tab
indent_size = 4

[*.{txt,md,markdown}]
indent_style = space
indent_size = 4
